@model TrustPower_Item_Booking_Web_App.Models.Bookings

@{ ViewData["Title"] = "Delete"; }

<div class="container text-center">
    <div class="row">
        <div class="col-lg-3 col-md-3"></div>
        <div class="col-lg-6 col-md-6">
            <!--
            <h1>Address Details</h1>
            <h5>Please enter the address of your event.</h5>-->
            <h1>Delete Booking</h1>
            <h5>Are you sure you want to delete this booking?</h5>
            <br /><br />
            <div class="row">
                <dl class="row text-white float-left">
                    <dt class="col-sm-6 text-right">
                        @Html.DisplayNameFor(model => model.EventName)
                    </dt>
                    <dd class="col-sm-6 text-left">
                        @Html.DisplayFor(model => model.EventName)
                    </dd>

                    <dt class="col-sm-6 text-right">
                        @Html.DisplayNameFor(model => model.EventDescription)
                    </dt>
                    <dd class="col-sm-6 text-left">
                        @Html.DisplayFor(model => model.EventDescription)
                    </dd>

                    <dt class="col-sm-6 text-right">
                        @Html.DisplayNameFor(model => model.DateReceived)
                    </dt>
                    <dd class="col-sm-6 text-left">
                        @Html.DisplayFor(model => model.DateReceived.Day)
                        /
                        @Html.DisplayFor(model => model.DateReceived.Month)
                        /
                        @Html.DisplayFor(model => model.DateReceived.Year)
                    </dd>

                    <dt class="col-sm-6 text-right">
                        @Html.DisplayNameFor(model => model.PickUpDate)
                    </dt>
                    <dd class="col-sm-6 text-left">
                        @Html.DisplayFor(model => model.PickUpDate.Day)
                        /
                        @Html.DisplayFor(model => model.PickUpDate.Month)
                        /
                        @Html.DisplayFor(model => model.PickUpDate.Year)
                    </dd>
                    <dt class="col-sm-6 text-right">
                        @Html.DisplayNameFor(model => model.ReturnDate)
                    </dt>
                    <dd class="col-sm-6 text-left">
                        @Html.DisplayFor(model => model.ReturnDate.Day)
                        /
                        @Html.DisplayFor(model => model.ReturnDate.Month)
                        /
                        @Html.DisplayFor(model => model.ReturnDate.Year)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete">
                <div class="form-row">
                    <div class="form-group col-6 text-right pt-4">
                        <a asp-controller="BookingProcess" asp-action="BookingsList" class="button a-button">
                            BACK
                        </a>
                    </div>
                    <div class="form-group col-6 text-left pt-4">
                        <input type="submit" value="DELETE" class="button input-button">
                    </div>
                    <div class="form-group col-0 text-right pt-4">
                        <input type="hidden" asp-for="BookingId" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-3 col-md-3"></div>

    </div>
</div>
